
<% include ./partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Review</h1>
    <div style="width:30%;margin:25px auto;">
      <form action="/products/<%=data.type%>/product-info/<%=data.id%>/<%=data.color%>/review" method="post">
        <div class="form-group">
          <input class="form-control"type="text" name="summary" placeholder="summary">
        </div>
        <div class="form-group">
          <textarea class="form-control"type="text" name="review" placeholder="Review" required></textarea>
        </div>
        <div class="form-group">
          <input class="form-control btn btn-primary"type="submit" value="Submit">
        </div>
      </form>
    </div>
  </div>
</div>

